{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "purpose": ["debug-in-terminal"],
            "args": ["--config", "./configs/simulation/config_simulation.json"],
            "env": { "PYTHONPATH": "${workspaceRoot}"},
            "justMyCode": false
        }
    ]
}